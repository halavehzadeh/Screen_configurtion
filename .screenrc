#kill the startup screen
startup_message off

#Don't dump your session if the shell is intrrupted/killed
autodetach on

#Alwsys display a status line in a session
hardstatus on
hardstatus alwayslastline
hardstatus string '%{= Kd} %{= Kd}%-w%{= Kr}[%{= KW}%n %t%{= Kr}]%{= Kd}%+w %-='

#Use F10 to close windwo 0, F1-F4 to select 1-4
bindkey  "^[[21~"   select 0
bindkey  "^[OP"    select 1
bindkey  "^[OQ"    select 2
bindkey  "^[OR"    select 3
bindkey  "^[OS"    select 4
